@page "{id:int}"
@model StudentWebApp.Pages.AddQuestionModel
@{
    <form method="post">
        <div class="mb-3">
            <label for="question" class="form-label">Enter question here:</label>
            <input type="text" class="form-control" id="question" name="question">
            <span asp-validation-for="@Model.question"></span>
        </div>
        <input type="hidden" class="form-control" id="Examid" name="Examid" value="@Model.Examid">
        <div style="position:fixed; bottom: 70px; right:30px">
            <a class="btn btn-secondary" href="/TeacherHomePage/@Model.teacherid">Click when finished</a>
    </form>
}
